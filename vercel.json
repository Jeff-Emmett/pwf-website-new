{
  "version": 2,
  "buildCommand": "npm ci && npx vite build --config client/vite.config.ts",
  "outputDirectory": "client/dist",
  "installCommand": "npm ci",
  "functions": {
    "api/index.ts": {
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.ts"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
} 